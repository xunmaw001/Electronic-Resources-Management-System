<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.ShujukuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.ShujukuEntity" id="shujukuMap">
        <result property="shujukubianma" column="shujukubianma"/>
        <result property="shujukumingcheng" column="shujukumingcheng"/>
        <result property="yonghuzhanghao" column="yonghuzhanghao"/>
        <result property="yonghuxingming" column="yonghuxingming"/>
        <result property="chuangjianshijian" column="chuangjianshijian"/>
        <result property="fenleifangfa" column="fenleifangfa"/>
        <result property="shuliang" column="shuliang"/>
        <result property="miaoshu" column="miaoshu"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.ShujukuVO" >
		SELECT * FROM shujuku  shujuku         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.ShujukuVO" >
		SELECT  shujuku.* FROM shujuku  shujuku
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.ShujukuView" >

		SELECT  shujuku.* FROM shujuku  shujuku 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.ShujukuView" >
		SELECT * FROM shujuku  shujuku <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM shujuku
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM shujuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM shujuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM shujuku
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
   
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM shujuku  
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
	
</mapper>
